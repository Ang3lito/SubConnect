@{
    Layout = "~/Views/Shared/login.cshtml"; // Set the layout at the top
}

<div class="login-header">
    <a href="@Url.Action("Index", "Home")">
        <img src="~/image/logo.png" alt="logo">
    </a>
    <p class="tagline">Your community, your home. Stay connected and informed.</p>
</div>
<div class="container">
    <div class="login-card">
        <form>
            <div class="form-group-username">
                <div class="floating-label">
                    <input type="text" class="form-control" placeholder="" required>
                    <label for="Username">Username</label>
                </div>
            </div>
            <div class="form-group-password">
                <div class="floating-label">
                    <input type="password" class="form-control" placeholder="" required>
                    <label for="Password">Password</label>
                </div>
            </div>
            <button type="submit" class="btn btn-primary">Log In</button>
            <a href="@Url.Action("Email", "Home")" class="forgot-password">Forgot Password?</a>
            <div class="divider"></div>
            <a href="@Url.Action("Register", "Home")" class="btn btn-outline">Create New Account</a>
        </form>
    </div>
</div>