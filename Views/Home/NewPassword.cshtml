@{
    Layout = "~/Views/Shared/security.cshtml"; // Set the layout at the top
}


<div class="card">
    <div class="card-header">
        <h1>Choose a new password</h1>
        <p>Create a strong password that is at least 6 characters long.</p>
    </div>
    <hr class="divider">
    <div class="card-body">
        <div class="form-group">
            <div class="floating-label">
                <input type="password" class="form-control" placeholder="">
                <label for="NewPassword">New Password</label>
            </div>
        </div>
        <div class="button-group">
            <button class="btn btn-cancel" onclick="location.href='@Url.Action("Login", "Home")'">Cancel</button>
            <button class="btn btn-search">Continue</button>
        </div>
    </div>
</div>