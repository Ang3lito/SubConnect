@{
    Layout = "~/Views/Shared/register.cshtml";
}

<div class="logo">
    <img src="~/image/logo.png" alt="Logo">
</div>
<div class="container">
    <div class="header">
        <h1>Create a new account</h1>
        <p>It's quick and easy.</p>
    </div>
    <div class="divider"></div>
    <form>
        <div class="form-group name-group">
            <input type="text" placeholder="First Name">
            <input type="text" placeholder="Last Name">
        </div>

        <div class="address-group">
            <label>Address</label>
            <div class="address-inputs">
                <select>
                    <option value="" disabled selected>H.No.</option>
                    <option value="1">1</option>
                    <option value="2">2</option>
                    <option value="3">3</option>
                </select>
                <select>
                    <option value="" disabled selected>Blk.</option>
                    <option value="a">A</option>
                    <option value="b">B</option>
                    <option value="c">C</option>
                </select>
                <select>
                    <option value="" disabled selected>Street</option>
                    <option value="main">Main St</option>
                    <option value="park">Park Ave</option>
                    <option value="oak">Oak Rd</option>
                </select>
            </div>
        </div>

        <div class="form-group-email">
            <input type="email" placeholder="Email">
        </div>

        <div class="form-group-password">
            <input type="password" placeholder="Password">
        </div>

        <button type="submit">Sign Up</button>

        <div class="login-link">
            <a href="#">Already Have An Account?</a>
        </div>
    </form>
</div>
